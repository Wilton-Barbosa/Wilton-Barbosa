#include <stdio.h>
  
int main() {
  
    int x, q;
    double TOTAL;
 
    scanf("%d %d", &x, &q);
 
    if (x==1) {
        TOTAL = 4.00*q;
        printf("Total: R$ %.2lf\n", TOTAL);
    } else if (x==2) {
        TOTAL = 4.50*q;
        printf("Total: R$ %.2lf\n", TOTAL);
    } else if (x==3) {
        TOTAL = 5.00*q;
        printf("Total: R$ %.2lf\n", TOTAL);
    } else if (x==4) {
        TOTAL = 2.00*q;
        printf("Total: R$ %.2lf\n", TOTAL);
    } else if (x==5) {
        TOTAL = 1.50*q;
        printf("Total: R$ %.2lf\n", TOTAL);
    }
  
    return 0;
}
